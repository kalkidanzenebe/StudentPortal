@{
    ViewData["Title"] = "User Dashboard";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3><i class="fas fa-user me-2"></i>Welcome, @(User.Identity?.Name ?? "User")!</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Your Quick Actions</h5>
                    <a asp-action="List" asp-controller="Students" class="btn btn-primary mb-2">
                        <i class="fas fa-users me-2"></i>View Assigned Students
                    </a>
                </div>
                <div class="col-md-6">
                    <h5>Your Profile</h5>
                    <div class="list-group">
                        <div class="list-group-item">
                            <strong>Email:</strong> @(User.Identity?.Name ?? "No email available")
                        </div>
                        <div class="list-group-item">
                            <strong>Role:</strong> @(User.IsInRole("Admin") ? "Admin" : "User")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
