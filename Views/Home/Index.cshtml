@{
    ViewData["Title"] = "Home";
}
@if (TempData["SuccessMessage"] != null)
{
    <div id="logoutMessage" class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<script>
    // Hide the logout message after 3 seconds
    window.onload = function() {
        var message = document.getElementById("logoutMessage");
        if (message) {
            setTimeout(function() {
                message.style.display = 'none';
            }, 3000); // 3000ms = 3 seconds
        }
    };
</script>
<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 style="font-size: 2.5rem;">Welcome to Student Portal System</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded">
                <div class="card-body">
                    <h4 class="text-center mb-4">Login</h4>

                    <form asp-controller="Auth" asp-action="Login" method="post">
                        <div class="form-group mb-3">
                            <label for="email">Email address</label>
                            <input type="email" class="form-control" id="email" name="Email" required />
                        </div>
                        <div class="form-group mb-4">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="Password" required />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </form>

                    <div class="text-center mt-3">
                        <a asp-controller="Auth" asp-action="Register">Don't have an account? Register</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
